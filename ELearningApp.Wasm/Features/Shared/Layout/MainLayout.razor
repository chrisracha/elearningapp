@using ELearningApp.Wasm.Components.Layout
@inherits LayoutComponentBase

<div class="min-h-screen flex flex-col">
    <!-- Header -->
    <Header />

    <!-- Main Content -->
    <main class="flex-1">
        @Body
    </main>

    <!-- Footer -->
    <Footer />
</div>

<!-- Error UI -->
<div id="blazor-error-ui" data-nosnippet class="hidden fixed bottom-0 left-0 right-0 bg-red-600 text-white p-4 shadow-lg z-50">
    <div class="container mx-auto flex justify-between items-center">
        <span class="flex items-center">
            <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"></path>
            </svg>
            An unhandled error has occurred.
        </span>
        <div class="flex items-center space-x-4">
            <a href="." class="bg-white text-red-600 px-4 py-2 rounded hover:bg-gray-100 transition-colors">Reload</a>
            <button onclick="document.getElementById('blazor-error-ui').style.display='none'" class="text-white hover:text-gray-200">
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"></path>
                </svg>
            </button>
        </div>
    </div>
</div>
