@using ELearningApp.Models.Entities
@using ELearningApp.Models.Enums
@inject NavigationManager Navigation

<div class="space-y-6">
    <!-- Course Stats -->
    <div class="flex items-center space-x-6 text-sm text-gray-600">
        <div class="flex items-center">
            <svg class="w-5 h-5 mr-2 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
            </svg>
            <span>@Course.AverageRating.ToString("F1")</span>
        </div>
        <div class="flex items-center">
            <svg class="w-5 h-5 mr-2 text-blue-500" fill="currentColor" viewBox="0 0 20 20">
                <path d="M13 6a3 3 0 11-6 0 3 3 0 016 0zM18 8a2 2 0 11-4 0 2 2 0 014 0zM14 15a4 4 0 00-8 0v3h8v-3z"></path>
            </svg>
            <span>@Course.EnrollmentCount learners</span>
        </div>
        <div class="flex items-center">
            <svg class="w-5 h-5 mr-2 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <span>@(Course.EstimatedDurationMinutes / 60) hour@(Course.EstimatedDurationMinutes / 60 != 1 ? "s" : "")</span>
        </div>
    </div>

    <!-- Last Updated -->
    <div class="text-sm text-gray-500">
        <span>Last updated @Course.UpdatedAt.ToString("MMMM dd, yyyy")</span>
    </div>

    <!-- Language -->
    <div class="text-sm text-gray-600">
        <span>English</span>
    </div>

    <!-- Features -->
    <div class="space-y-3">
        <h3 class="font-semibold text-gray-900">Features</h3>
        <div class="space-y-2 text-sm text-gray-600">
            <div class="flex items-center">
                <svg class="w-4 h-4 mr-3 text-green-500" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                </svg>
                <span>Available on <strong>iOS</strong> and <strong>Android</strong></span>
            </div>
            <div class="flex items-center">
                <svg class="w-4 h-4 mr-3 text-green-500" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                </svg>
                <span>Certificate of completion</span>
            </div>
            <div class="flex items-center">
                <svg class="w-4 h-4 mr-3 text-green-500" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                </svg>
                <span>Lifetime access</span>
            </div>
            <div class="flex items-center">
                <svg class="w-4 h-4 mr-3 text-green-500" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                </svg>
                <span>30-day money back guarantee</span>
            </div>
            <div class="flex items-center">
                <svg class="w-4 h-4 mr-3 text-green-500" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                </svg>
                <span>Full-time Q&A support</span>
            </div>
        </div>
    </div>

    <!-- Description -->
    <div class="space-y-3">
        <h3 class="font-semibold text-gray-900">Description</h3>
        <div class="text-gray-700 leading-relaxed space-y-4">
            @if (!string.IsNullOrEmpty(Course.LongDescription))
            {
                @foreach (var paragraph in Course.LongDescription.Split('\n', StringSplitOptions.RemoveEmptyEntries))
                {
                    <p>@paragraph</p>
                }
            }
            else
            {
                <p>@Course.ShortDescription</p>
                <p>
                    This comprehensive course is designed to provide you with practical skills and knowledge. 
                    Our expert instructors will guide you through each concept with real-world examples and hands-on exercises.
                </p>
                <p>
                    By the end of this course, you'll have the confidence and skills needed to apply what you've learned 
                    in real-world scenarios. Join thousands of students who have already transformed their careers with our courses.
                </p>
            }
        </div>
    </div>

    <!-- What You'll Learn -->
    @if (!string.IsNullOrEmpty(Course.WhatYouWillLearn))
    {
        <div class="space-y-3">
            <h3 class="font-semibold text-gray-900">What You'll Learn</h3>
            <div class="bg-gray-50 p-4 rounded-lg">
                <div class="space-y-2">
                    @foreach (var item in Course.WhatYouWillLearn.Split('\n', StringSplitOptions.RemoveEmptyEntries))
                    {
                        <div class="flex items-start">
                            <svg class="w-4 h-4 mr-3 mt-0.5 text-green-500 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                            </svg>
                            <span class="text-sm text-gray-700">@item.Trim()</span>
                        </div>
                    }
                </div>
            </div>
        </div>
    }

    <!-- Prerequisites -->
    @if (!string.IsNullOrEmpty(Course.Prerequisites))
    {
        <div class="space-y-3">
            <h3 class="font-semibold text-gray-900">Prerequisites</h3>
            <div class="text-gray-700 text-sm">
                <p>@Course.Prerequisites</p>
            </div>
        </div>
    }

    <!-- Instructor Info - Now Clickable -->
    <div class="space-y-3 pt-6 border-t border-gray-200">
        <h3 class="font-semibold text-gray-900">Instructor</h3>
        <div class="flex items-center space-x-4">
            <div class="w-16 h-16 bg-gray-300 rounded-full flex items-center justify-center cursor-pointer"
                 @onclick="() => ViewInstructor(Course.InstructorId)">
                <svg class="w-8 h-8 text-gray-600" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd"></path>
                </svg>
            </div>
            <div class="flex-1">
                <button @onclick="() => ViewInstructor(Course.InstructorId)"
                        class="text-left text-lg font-semibold text-primary-600 hover:text-primary-800 hover:underline transition-colors focus:outline-none focus:ring-2 focus:ring-primary-500 focus:ring-offset-1 rounded px-1">
                    @Course.Instructor.FirstName @Course.Instructor.LastName
                </button>
                <p class="text-sm text-gray-600 mb-2">Professional Instructor</p>
                <div class="flex items-center text-sm text-gray-500">
                    <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                    </svg>
                    Verified Instructor
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter] public Course Course { get; set; } = null!;

    private void ViewInstructor(string instructorId)
    {
        try
        {
            if (!string.IsNullOrEmpty(instructorId))
            {
                Navigation.NavigateTo($"/instructor/{instructorId}");
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Instructor navigation error: {ex.Message}");
        }
    }
}